<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="nicolas" id="addColumn">
        <addColumn tableName="users">
            <column afterColumn="username"
                    name="created_at"
                    type="datetime">
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="nicolas" id="4">
        <createTable tableName="runs">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" />
            </column>
            <column name="start" type="timestamp" />
            <column name="end" type="timestamp" />
            <column name="state" type="VARCHAR(255)" />
            <column name="company_id" type="VARCHAR(255)" />
        </createTable>
        <rollback>
            <dropTable tableName="runs" />
        </rollback>
    </changeSet>

    <changeSet author="nicolas" id="5">
        <createTable tableName="locations">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" />
            </column>
            <column name="latitude" type="DOUBLE" />
            <column name="longitude" type="DOUBLE" />
            <column name="run_id" type="VARCHAR(255)" />
        </createTable>
        <rollback>
            <dropTable tableName="runs" />
        </rollback>
    </changeSet>

</databaseChangeLog>
