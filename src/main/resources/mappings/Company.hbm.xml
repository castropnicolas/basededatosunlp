<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ar.edu.unlp.model">
    <class name="ar.edu.unlp.model.Company" table="companies">
        <id name="id" column="id">
            <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>

        <bag name="users" lazy="extra" cascade="all">
            <key column="company_id" not-null="false"/>
            <one-to-many class="ar.edu.unlp.model.User"/>
        </bag>

        <bag name="runs" lazy="extra" cascade="all">
            <key column="company_id" not-null="false"/>
            <one-to-many class="ar.edu.unlp.model.Run"/>
        </bag>
    </class>
</hibernate-mapping>
